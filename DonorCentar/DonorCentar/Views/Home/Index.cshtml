@{
    ViewData["Title"] = "DonorCentar";
    var poruka = (string)ViewData["error_poruka"];
}
@model DonorCentar.ViewModels.HomeIndexVM;

<div id="index-page">
    <div class="container">
        <img src="~/img/logo.png" class="mt-4" />
        <h1 class="mb-4" id="donor-title">DonorCentar</h1>
    </div>

    <div class="text-center">
        <div class="login-page">
            <form asp-action="Prijava" asp-controller="Home">
                <div class="form-group">
                    <label for="KorisnickoImePrijava">Korisničko ime</label>
                    <input id="KorisnickoImePrijava" asp-for="KorisnickoIme" class="form-control" />
                    <span asp-validation-for="KorisnickoIme"></span>
                </div>

                <div class="form-group">
                    <label for="SifraPrijava">Šifra</label>
                    <input id="SifraPrijava" asp-for="Sifra" class="form-control" />
                    <span asp-validation-for="Sifra" ></span>

                </div>

                <div class="form-group form-check">
                    <input class="form-check-input" asp-for="ZapamtiSifru">
                    <label class="form-check-label">Zapamti šifru</label>
                </div>

                <button type="submit" class="btn btn-primary">Prijavi se</button>


                @if (poruka != null)
                {
                    <br />
                    <div class="alert alert-danger mt-4">
                        <p>@poruka</p>
                    </div>
                }
                <p class="mt-3">Nemaš korisnički račun?</p>
                <p><a href="Home/Registracija" class="btn btn-outline-primary btn-sm">Napravi novi</a></p>
            </form>
        </div>
    </div>
</div>